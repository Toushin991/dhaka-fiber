@model Dhaka_Fiber.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = null;
}
<body>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Logins", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {


               
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                if (@ViewBag.Message != null)
                {
                    <div style="border: 1px solid red">
                        @ViewBag.Message
                    </div>
                }
                <table>
                    <tr>
                        <td>@Html.LabelFor(a => a.Username, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                        <td>@Html.TextBoxFor(a => a.Username, new { htmlAttributes = new { @class = "form-control" } })</td>
                        <td>@Html.ValidationMessageFor(a => a.Username, "", new { @class = "text-danger" })</td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(a => a.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                        </td>
                        <td>
                            @Html.PasswordFor(a => a.Password, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                        <td>
                            @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" value="Login" />
                        </td>
                        <td></td>
                    </tr>
                </table>

            }
        </section>
    </div>
</div>
    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>





