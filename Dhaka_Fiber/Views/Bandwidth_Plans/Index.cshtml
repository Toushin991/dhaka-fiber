@model IEnumerable<Dhaka_Fiber.Models.Bandwidth_Plans>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bandwidth_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate_Download)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate_Upload)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bandwidth_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate_Download)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate_Upload)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
