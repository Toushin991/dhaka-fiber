@model IEnumerable<Dhaka_Fiber.Models.Plan>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
</head>
<body>
    <p>
        @Html.ActionLink("Add New Plan", "Create", new { @class = "btn btn-primary"})
    </p>
    <div class="row">
        <header class="panel-heading">Plans</header>
        <div class="col-lg-12">
            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th>
                            @Html.DisplayName("Plan Name")
                        </th>
                        <th>
                            @Html.DisplayName("Plan Price")
                        </th>
                        <th>
                            @Html.DisplayName("Plan_Validity")
                        </th>
                        <th>
                            @Html.DisplayName("Connection Type")
                        </th>
                        <th>
                            @Html.DisplayName("Bandwidth Plans")
                        </th>
                        <th>
                            @Html.DisplayName("IP Pools")
                        </th>
                        <th>
                            @Html.DisplayName("Router")
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Plan_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Plan_Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Plan_Validity) &nbsp; @Html.DisplayFor(modelItem => item.Plan_Validity_d_m)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Connection_Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Bandwidth_Plans.Bandwidth_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IP_Pools1.Pool_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Router1.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id, @class = "btn btn-primary" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
